<h3>List of Links and Codes</h3></br>

<table class="table table-hover">

<tr>
  <th>ID</th>
  <th>Input Link</th>
  <th>Output Code</th>

  <th>Created</th>
  <th>Updated</th>
</tr>

<% @links.each do |link| %>

<tr>
  <td><%= link.id %></td>
  <td><a href="<%= link.input_link %>"><%= link.input_link %></a></td>

  <td><a href="/go/<%= link.output_code %>/"><%= link.output_code %></a></td>
  <td><%= link.created_at %></td>

  <td><%= link.updated_at%></td>
  <td><a href="/links/<%= link.id %>/delete"><button class="delete">Delete</button></a></td>
</tr>

<% end %>

</table>